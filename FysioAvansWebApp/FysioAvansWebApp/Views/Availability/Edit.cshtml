@model AvailabilityDetailsViewModel;

@{
    ViewData["Title"] = "Edit";
}

<h1>Aanpassen</h1>

<h4>Beschikbaarheid</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartAvailability" class="control-label">Startdatum beschikbaarheid</label>
                <input asp-for="StartAvailability" class="form-control" />
                <span asp-validation-for="StartAvailability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndAvailability" class="control-label">Einddatum beschikbaarheid</label>
                <input asp-for="EndAvailability" class="form-control" />
                <span asp-validation-for="EndAvailability" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="AvailabilityId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

