@model AvailabilityDetailsViewModel;

@{
    ViewData["Title"] = "Delete";
}

<h1>Verwijderen</h1>

<h3>Weet je zeker dat je dit wilt verwijderen?</h3>
<div>
    <h4>Beschikbaarheid</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Startdatum Beschikbaarheid
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartAvailability)
        </dd>
        <dt class="col-sm-2">
            Einddatum Beschikbaarheid
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndAvailability)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AvailabilityId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
