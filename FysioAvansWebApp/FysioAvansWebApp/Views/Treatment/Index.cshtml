@model IEnumerable<TreatmentDetailsViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Voeg afspraak toe", "Create", "Treatment", null, new { @class = "btn btn-success color-green text-dark" })
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>TypeId</td>
                    <td>Patient</td>
                    <td>Behandelaar</td>
                    <td>Behandeldatum</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var treatment in Model)
                    {
                <tr>
                    <td>@treatment.TreatmentId</td>
                    <td>@treatment.TypeId</td>
                    <td>@treatment.PatientFullname</td>
                    <td>@treatment.CaretakerFullname</td>
                    <td>@treatment.TreatmentDate</td>
                    <td class="text-center">@Html.ActionLink("Edit", "Edit", "Treatment", new { Id = treatment.TreatmentId }) | @Html.ActionLink("Delete", "Delete", "Treatment", new { Id = treatment.TreatmentId })</td>
                </tr>
                    }
                }
                else
                {
                <td colspan="5" class="text-center">
                    No records found
                </td>
            }
                </tbody>
            </table>
        </div>
    </div>

