@model TreatmentDetailsViewModel;

@{
    ViewData["Title"] = "Delete";
}

<h1>Verwijderen</h1>

<h3>Weet je zeker dat je dit wilt verwijderen?</h3>
<div>
    <h4>Behandeling</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Behandeltype:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeId)
        </dd>
        <dt class="col-sm-2">
            Patient:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientFullname)
        </dd>
        <dt class="col-sm-2">
            Behandelaar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaretakerFullname)
        </dd>
        <dt class="col-sm-2">
            Beschrijving
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Kamer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room)
        </dd>
        <dt class="col-sm-2">
            Notitie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            Notitie zichtbaar voor patient
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VisibleForPatient)
        </dd>
        <dt class="col-sm-2">
            Behandeldatum
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TreatmentDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TreatmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
