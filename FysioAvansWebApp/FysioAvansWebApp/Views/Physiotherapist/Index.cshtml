@model IEnumerable<PhysiotherapistDetailsViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Create new test", "Create", "Physiotherapist", null, new { @class = "btn btn-success color-green text-dark" })
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Rolename</td>
                    <td>Physionumber</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var physiotherapistDetails in Model)
                    {
                        <tr>
                            <td>@physiotherapistDetails.Firstname @physiotherapistDetails.Lastname</td>
                            <td>@physiotherapistDetails.RoletypeName</td>
                            <td>@physiotherapistDetails.PhysiotherapistNumber</td>
                            <td class="text-center">@Html.ActionLink("Edit", "Edit", "Physiotherapist", new { Id = physiotherapistDetails.PhysiotherapistId }) | @Html.ActionLink("Delete", "Delete", "Physiotherapist", new { Id = physiotherapistDetails.PhysiotherapistId })</td>
                        </tr>
                    }
                }
                else
                {
                <td colspan="4" class="text-center">
                    No records found
                </td>
            }
                </tbody>
            </table>
        </div>
    </div>

