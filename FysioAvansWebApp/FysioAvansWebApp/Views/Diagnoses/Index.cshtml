@model IEnumerable<VektisDiagnosis>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>BodyLocalization</td>
                    <td>Pathology</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var diagnosis in Model)
                    {
                        <tr>
                            <td>@diagnosis.Id</td>
                            <td>@diagnosis.BodyLocalization</td>
                            <td>@diagnosis.Pathology</td>
                        </tr>
                    }
                }
                else
                {
                <td colspan="4" class="text-center">
                    No records found
                </td>
            }
                </tbody>
            </table>
        </div>
    </div>

