@model Person;

@{
    ViewData["Title"] = "Create";
}

<h1>Toevoegen</h1>

<h4>Persoon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label">Voornaam</label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label">Achternaam</label>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phonenumber" class="control-label">Telefoonnummer</label>
                <input asp-for="Phonenumber" class="form-control" />
                <span asp-validation-for="Phonenumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoletypeId" class="control-label">Rol</label>
                <select asp-for="RoletypeId" class="form-control">
                    <option value="1">Student</option>
                    <option value="2">Docent</option>
                </select>
                <span asp-validation-for="RoletypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoletypeNumber" class="control-label">Student/BIG nummer</label>
                <input asp-for="RoletypeNumber" class="form-control" />
                <span asp-validation-for="RoletypeNumber" class="text-danger"></span>
            </div>  <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

