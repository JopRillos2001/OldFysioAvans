@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Voeg persoon toe", "Create", "Person", null, new { @class = "btn btn-success color-green text-dark"})
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Phonenumber</td>
                    <td>Student/BIG nummer</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var person in Model)
                    {
                <tr>
                    <td>@person.Id</td>
                    <td>@person.Firstname @person.Lastname</td>
                    <td>@person.Phonenumber</td>
                    <td>@person.RoletypeNumber</td>
                    <td class="text-center">@Html.ActionLink("Edit", "Edit", "Person", new { Id = person.Id }) | @Html.ActionLink("Delete", "Delete", "Person", new { Id = person.Id })</td>
                    <td class="text-center">@Html.ActionLink("Selecteer persoon", "Create", "Patient", new { Id = person.Id }, new { @class = "btn btn-success color-green text-dark" })</td>
</tr>
                    }
                }
                else
                {
                <td colspan="4" class="text-center">
                    No records found
                </td>
            }
                </tbody>
            </table>
        </div>
    </div>

