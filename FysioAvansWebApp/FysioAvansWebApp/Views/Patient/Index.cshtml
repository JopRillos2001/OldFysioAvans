@model IEnumerable<PatientDetailsViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Voeg patient toe", "Index", "Person", null, new { @class = "btn btn-success color-green text-dark" })
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Rolename</td>
                    <td>Issue Description</td>
                    <td>Photo</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var patientDetails in Model)
                    {
                <tr>
                    <td>@patientDetails.Firstname @patientDetails.Lastname</td>
                    <td>@patientDetails.RoletypeName</td>
                    <td>@patientDetails.PatientDescription</td>
                    <td><img src="~/img/PatientPhotos/@patientDetails.Photo" class="rounded-circle" width="40" height="40" asp-append-version="true"></td>
                    <td class="text-center">@Html.ActionLink("Edit", "Edit", "Patient", new { Id = patientDetails.PatientId }) | @Html.ActionLink("Delete", "Delete", "Patient", new { Id = patientDetails.PatientId })</td>
                </tr>
                    }
                }
                else
                {
                <td colspan="5" class="text-center">
                    No records found
                </td>
            }
                </tbody>
            </table>
        </div>
    </div>

