@model IEnumerable<PatientDetailsViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Rolename</td>
                    <td>Issue Description</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var patientDetails in Model)
                    {
                        <tr>
                            <td>@patientDetails.Firstname @patientDetails.Lastname</td>
                            <td>@patientDetails.RoletypeName</td>                           
                            <td>@patientDetails.PatientDescription</td>                           
                        </tr>
                    }
                }
                else
                {
                <td colspan="4" class="text-center">
                    No records found
                </td>
            }
                </tbody>
            </table>
        </div>
    </div>

